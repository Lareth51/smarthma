<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="" >

    <!--
    This layout is a two-pane layout for the Parties
    master/detail flow. See res/values-large/refs.xml and
    res/values-sw600dp/refs.xml for an example of layout aliases
    that replace the single-pane version of the layout with
    this two-pane version.

    For more on layout aliases, see:
    http://developer.android.com/training/multiscreen/screensizes.html#TaskUseAliasFilters
    -->


    <!-- android:layout_width="match_parent" -->
    <!-- was  android:name="com.google.android.gms.maps.SupportMapFragment" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <fragment
            android:id="@+id/left_panel_map"
            android:name="pl.wasat.smarthma.ui.fragments.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView_map_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:contentDescription="@string/desc_img_legend" />

        <ProgressBar
            android:id="@+id/progressBarWmsLoad"
            style="@android:style/Widget.ProgressBar.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/left_panel_map"
            android:layout_alignParentTop="true"
            android:visibility="invisible" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/right_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
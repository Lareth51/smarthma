<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/missions_detail_frag_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/missions_detail_frag_title_tv"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textColor="#38b4ea"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/missions_detail_frag_subtitle_tv"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="2dp"
            android:textColor="#A8A8A8"
            android:textSize="12sp"
            android:textStyle="italic"/>

        <WebView
            android:id="@+id/missions_detail_frag_content_web"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:minHeight="200dp"
            android:padding="30dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:id="@+id/missions_detail_frag_search_data_btn"
                style="@style/styleBtnShowProduct"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center" 
                android:text="@string/search_eo_data" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
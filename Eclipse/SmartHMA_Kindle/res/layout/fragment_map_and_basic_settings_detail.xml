<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/frag_search_res_coll_det_linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/frag_search_res_coll_det_layout_parent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                style="@style/styleSettingsBasicTitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/collection_id" />

            <TextView
                android:id="@+id/frag_search_res_coll_det_tv_parent_id"
                style="@style/styleSettingsBasicValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fedeo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/frag_search_res_coll_det_layout_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/frag_search_res_coll_det_tv_area"
                    style="@style/styleSettingsBasicTitles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_area" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/styleSettingsBasicValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sw_"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/frag_search_res_coll_det_tv_area_sw_lat"
                        style="@style/styleSettingsBasicValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/frag_search_res_coll_det_tv_area_sw_lon"
                        style="@style/styleSettingsBasicValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/styleSettingsBasicValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ne_"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/frag_search_res_coll_det_tv_area_ne_lat"
                        style="@style/styleSettingsBasicValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/frag_search_res_coll_det_tv_area_ne_lon"
                        style="@style/styleSettingsBasicValues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zero" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TextView
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:text="@string/time_period"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/styleSettingsBasicValues"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/from_"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/styleSettingsBasicValues"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/to_"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/frag_search_res_coll_det_tv_time_from_date"
                            style="@style/styleSettingsBasicValues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_time" />

                        <TextView
                            android:id="@+id/frag_search_res_coll_det_tv_time_to_date"
                            style="@style/styleSettingsBasicValues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_time" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/frag_search_res_coll_det_tv_time_from_time"
                            style="@style/styleSettingsBasicValues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_time" />

                        <TextView
                            android:id="@+id/frag_search_res_coll_det_tv_time_to_time"
                            style="@style/styleSettingsBasicValues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_time" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/frag_search_res_coll_det_btn_search_product"
                style="@style/styleBtnShowProduct"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:enabled="false"
                android:text="@string/show_products" />
            
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/frag_search_res_coll_det_layout_top"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/frag_search_res_coll_det_linear_bottom" >

        <LinearLayout
            android:id="@+id/frag_search_res_coll_det_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/frag_search_res_coll_det_tv_coll_name"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:textColor="#38b4ea"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_search_res_coll_det_tv_col_dates"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="2dp"
                android:textColor="#A8A8A8"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/frag_search_res_coll_det_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/frag_search_res_coll_det_layout_title"
            android:background="#FFFFFF" >

            <WebView
                android:id="@+id/frag_search_res_coll_det_web"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="16sp" />
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
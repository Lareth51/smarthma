<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/article_row_layout"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/esa_mission_cell_divider"
    android:paddingTop="@dimen/esa_mission_cell_divider"
    tools:context=".NewsListFragment">

    <LinearLayout
        android:id="@+id/view_cell_article_row_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/esa_online_cell_height"
        android:paddingTop="@dimen/esa_online_cell_height">

        <pl.wasat.smarthma.customviews.TextViewWithFont
            android:id="@+id/article_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="8dip"
            android:text="Lorem ipsum lorem ipsum"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/esa_online_cell_text_size_large" />

        <pl.wasat.smarthma.customviews.TextViewWithFont
            android:id="@+id/article_listing_smallprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="8dip"
            android:paddingTop="2dp"
            android:text="Lorem ipsum lorem ipsum"
            android:textColor="@color/text_black"
            android:textSize="@dimen/esa_online_cell_text_size" />

    </LinearLayout>
</LinearLayout>
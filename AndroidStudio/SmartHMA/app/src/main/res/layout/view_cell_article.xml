<LinearLayout
    android:id="@+id/article_row_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="?android:attr/textAppearanceLarge"
    android:background="@color/background_gray"
    tools:context=".NewsListFragment"
    android:paddingBottom="@dimen/esa_mission_cell_divider"
    android:paddingTop="@dimen/esa_mission_cell_divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/esa_online_cell_height"
        android:paddingTop="@dimen/esa_online_cell_height"
        android:background="@color/background_white">
    <TextView
        android:id="@+id/article_title_text"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_blue"

        android:paddingLeft="15dip"
        android:paddingRight="8dip"
        android:text="Lorem ipsum lorem ipsum"
        android:textSize="@dimen/esa_online_cell_text_size_large" />


    <TextView
        style="?android:attr/textAppearanceLarge"
        android:id="@+id/article_listing_smallprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingLeft="15dip"
        android:paddingRight="8dip"

        android:textSize="@dimen/esa_online_cell_text_size"
        android:textStyle="italic"
        android:text="Lorem ipsum lorem ipsum"
        android:textColor="@color/text_black" />
    </LinearLayout>
</LinearLayout>
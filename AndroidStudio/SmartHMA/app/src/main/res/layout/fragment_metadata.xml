                android:textSize="@dimen/search_eo_data_text_medium"
                android:textColor="@color/action_bar_background"
                android:text="lorem lorem lorem lorem
                "/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/action_bar_background"
            android:layout_marginLeft="@dimen/browse_eo_padding"
            />

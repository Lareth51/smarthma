                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/search_eo_data_text_medium"
                android:textColor="@color/action_bar_background"
                android:text="lorem lorem lorem lorem
                "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <pl.wasat.smarthma.customviews.TextViewWithFont

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/browse_eo_padding"
                android:layout_weight="2"

            style="@style/textMainTitle"
            android:paddingLeft="@dimen/browse_eo_padding"
            android:textSize="@dimen/search_eo_data_text"
            android:text="Earth Observation Provider Contact"/>

        <LinearLayout
            android:layout_width="fill_parent"
